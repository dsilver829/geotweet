<div class="container-fluid">
  <div class="row header">
    <div class="col-xs-12">
      <a href="<%= root_url %>"><span class="glyphicon glyphicon-map-marker header" aria-hidden="true"></span><h1 class="accent">Geotweet</h1></a>
    </div>
  </div>
  <div class="row main">
    <div class="col-xs-12 col-md-6">
      <ol>
        <% @geotweets.each do |geotweet| %>
            <li><%= geotweet.status %></li>
        <% end %>
      </ol>
    </div>
    <div class="col-xs-12 col-md-6 map-container">
      <%= render partial: "map", locals: {location: @location } %>
    </div>
  </div>
</div>